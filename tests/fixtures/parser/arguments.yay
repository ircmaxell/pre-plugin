<?php

$(macro) {
    $(
        // "as alias" due to https://github.com/marcioAlmada/yay/issues/56
        arguments() as alias
    )
} >> {
    [
        $(alias ...(, ) {
            $$(stringify($(argument)))
        })
    ]
}

return [
    string $foo,
    stdClass $bar = makeObject(),
    $baz = new stdClass()
];
