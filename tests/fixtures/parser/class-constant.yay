<?php

$(macro) {
    $(
        // "as alias" due to https://github.com/marcioAlmada/yay/issues/56
        classConstant() as alias
    )
} >> {
    [
        $(alias ... {
            $(classConstantVisibilityModifiers ? {
                $(classConstantVisibilityModifiers ...(,) {
                    $$(stringify($(classConstantVisibilityModifier)))
                }),
            })
            $$(stringify($(classConstantName))),
            $(classConstantValue)
        })
    ]
}

return [
    const bar = 'baz',
    private const foo = 'bar'
];
